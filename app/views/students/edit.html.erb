<% if @student.errors.any? %>
  <div class="container">
    <div class="row singn-up-form">
      <div class="col s12 m12 l12">
        <div class="card-panel red lighten-2">
          <span class="white-text">
            <strong><%= pluralize(@student.errors.count, "error") %></strong>
              prohibited your profile from being created
              <ul>
                <% @student.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </span>
          </div>
        </div>
      </div>
    </div>  
<% end %>
<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 l12">
      <div class="card-panel">
        <h3 class="header">Edit your profile</h3>
        <div class="row">
          <%= form_for @student do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>  
                <%= f.label :name %>
              </div>
            </div> 
            <div class="row">
              <div class="input-field col s12">    
                <%= f.email_field :email, placeholder: "Enter your email address" %>    
                <%= f.label :email, class: "active" %>
              </div>
            <div class="row">
              <div class="input-field col s12">    
                <%= f.password_field :password, placeholder: "Insert a new password" %>    
                <%= f.label :password, class: "active" %>
              </div>
            </div> 
            <div class="row">
              <div class="input-field col s12">    
                <%= f.password_field :password_confirmation, placeholder: "Confirm your new password" %>    
                <%= f.label :password_confirmation, class: "active" %>
               </div>
            </div> 
            <div class="row">
              <div class="input-field col s12">  
              <%= f.button class: "btn orange waves-effect waves-light center" do %>
                Update Profile
              <% end %>
              </div>    
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
